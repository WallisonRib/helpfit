// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  phone     String?
  cref      String?
  role      String   // "TRAINER" or "STUDENT"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  trainerId String?
  trainer   User?   @relation("TrainerStudents", fields: [trainerId], references: [id])
  students  User[]  @relation("TrainerStudents")

  assessments Assessment[]
  workouts    Workout[]
  logs        WorkoutLog[]
}

model Assessment {
  id        String   @id @default(cuid())
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  date      DateTime @default(now())
  
  weight    Float
  height    Float
  
  // Skinfolds (in mm)
  chest       Float?
  abdominal   Float?
  thigh       Float?
  tricep      Float?
  subscapular Float?
  suprailiac  Float?
  midaxillary Float?
  
  bodyFatPercentage Float?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workout {
  id        String   @id @default(cuid())
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  title     String
  content   String   // JSON string or rich text for workout details
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  logs WorkoutLog[]
}

model WorkoutLog {
  id        String   @id @default(cuid())
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  workoutId String?
  workout   Workout? @relation(fields: [workoutId], references: [id])
  date      DateTime @default(now())
}
